<p id="notice"><%= notice %></p>


<p><strong>books in <%= @category.title %> category:</strong></p>
<table width="500px">
  <thead>
    <tr>
      <td>Cover</td>
      <td>Title</td>
      <td>Authors</td>
    </tr>
  </thead>
  <tbody>
    <% @category.books.each do |book| %>
      <tr>
        <td><%= image_tag book.cover_url(:standard) %></td>
        <td><%= link_to "#{book.title}", book %></td>
        <td>
          <% book.authors.each do |author| %>
            <%= link_to "#{author.name}", author %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'Back', categories_path %></p>