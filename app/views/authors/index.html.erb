<h1>Authors</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Books</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
        <td>
          <% author.books.each do |book| %>
            <%= book.title %>
            <%= ',' if book != author.books.last %>
          <% end %>
        </td>
        <td><%= link_to 'Show', author, class: 'btn btn-info' %></td>
          <% if can? :manage, Author %>
            <td><%= link_to 'Edit', edit_author_path(author), class: 'btn btn-primary' %></td>
            <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Author', new_author_path, class: 'btn btn-primary' if can? :manage, Author %>
<p><%= link_to 'back', root_path %></p>