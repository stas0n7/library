<h1>Books</h1>
<p align='left'><%= link_to 'New Book', new_book_path, class: 'btn btn-primary' if can? :manage, Book %></p>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Cover</th>
      <th>Title</th>
      <th>Author</th>
      <th>Category</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.cover_url(:small)%></td>
        <td><%= book.title %></td>
        <td>
          <% book.authors.each do |author| %>
            <%= author.name %>
            <%= ',' if author != book.authors.last %>
          <% end %>
        </td>
        <td><%= book.category&.title %></td>
        <td><%= link_to 'Show', book, class: 'btn btn-info' %></td>
          <% if can? :manage, Book %>
            <td><%= link_to 'Edit', edit_book_path(book), class: 'btn btn-primary' %></td>
            <td><%= link_to 'Add author', add_author_page_book_path(book), class: 'btn btn-primary' %></td>
            <td><%= link_to 'Remove author', remove_author_page_book_path(book), class: 'btn btn-danger' %></td>
            <td><%= link_to 'Delete book', book, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<p><%= link_to 'back', root_path %></p>
