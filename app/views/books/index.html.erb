<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Cover</th>
      <th>Title</th>
      <th>Author</th>
      <th>Category</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.cover_url(:small)%></td>
        <td><%= book.title %></td>
        <td>
          <% book.authors.each do |author| %>
            <ul>
              <%= author.name %>
            </ul>
          <% end %>
        </td>
        <td><%= book.category&.title %></td>
        <td><%= link_to 'Show', book %></td>
          <% if can? :manage, Book %>
            <td><%= link_to 'Edit', edit_book_path(book) %></td>
            <td><%= link_to 'Add author', add_author_page_book_path(book) %></td>
            <td><%= link_to 'Remove author', remove_author_page_book_path(book) %></td>
            <td><%= link_to 'Delete book', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path if can? :manage, Book%>
