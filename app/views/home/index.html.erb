<%= link_to 'books', books_path %> |
<%= link_to 'authors', authors_path %>
<table width="500px">
  <thead>
    <tr>
      <td>title book</td>
      <td>category</td>
      <td>author</td>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to "#{book.title}", book %></td>
        <td><%= book.category.title %></td>
        <td>
          <% book.authors.each do |author| %>
            <%= link_to "#{author.name}", author %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
